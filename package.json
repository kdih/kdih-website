{
  "name": "kdih-website",
  "version": "2.0.0",
  "description": "Katsina Digital Innovation Hub - Professional Platform",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "test": "jest --coverage",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --coverage",
    "test:e2e": "jest tests/e2e --coverage",
    "test:watch": "jest --watch",
    "test:verbose": "jest --verbose --coverage",
    "security:test": "node security-test.js",
    "security:check": "node pre-deploy-security.js",
    "security:audit": "npm audit && node pre-deploy-security.js",
    "optimize-images": "node scripts/optimize-images.js"
  },
  "keywords": [
    "kdih",
    "innovation",
    "hub",
    "education",
    "incubation"
  ],
  "author": "KDIH Team",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "fs-extra": "^11.3.2",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.11",
    "paystack-node": "^0.3.0",
    "pdfkit": "^0.17.2",
    "pg": "^8.11.3",
